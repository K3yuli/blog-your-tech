{{!-- the use of #each to begin a loop and /each to end the loop
every item in between wil, be repeated for every item in posts --}}
<ol class="post-list">
    {{#each posts as a |post|}}
    <li>
        <article class="post">
            <div class="title">
                <h1>{{post.title}}</h1>
                <p class="content">{{post.content}}</p>
            </div>
            <div class="meta">
                <a href="/post/{{post.id}}">{{post.comment.length}} comment(s)</a>
            </div>
        </article>
    </li>
    {{/each}}
</ol>