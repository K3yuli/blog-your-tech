<div class="posts">
    {{#each posts}}
    <article class="card">
        <div>
            <h2>
                <a href="/post/{{id}}">{{title}}</a>
            </h2>
            <div>
                Posted by {{User.username}} on {{format_date created_at}}
            </div>
        </div>
        <div class="card-body">
            {{body}}
        </div>
    </article>
    {{/each}}
</div>