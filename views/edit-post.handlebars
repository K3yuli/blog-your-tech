<div class="post-card">
    <div class="card-header">
        <h2>Edit Post</h2>
    </div>
    <form id="edit-post-form" class="card-body">
        <input type="hidden" id="post-id" value="{{post.id}}">

        <label class="form-label" for="post-title">Title</label>
        <input type="text" name="post-title" value="{{post.id}}">

        <label for="post-body" class="form-label">Content</label>
        <textarea name="post-body" class="form-input">{{post.body}}"</textarea>

        <button type="submit" class="btn">Update</button>
        <button type="button" id="delete-btn" class="btn">Delete</button>
    </form>
</div>
<script src="/public/javascript/edit.js"></script>